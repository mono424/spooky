{
  "name": "@spooky/tests",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "generate": "pnpm run generate:client && pnpm run generate:remote",
    "generate:client": "syncgen --input ../example/schema/src/schema.surql --output .spooky/client_schema.ts",
    "generate:remote": "syncgen --input ../example/schema/src/schema.surql --output .spooky/schema.gen.surql --modules-dir ../packages/surrealism-modules"
  },
  "devDependencies": {
    "syncgen": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "surrealdb": "^2.0.0-alpha.14",
    "testcontainers": "^11.10.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
