{
  "name": "db-solid",
  "version": "1.0.0",
  "description": "SurrealDB client with local and remote database support for browser applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "surrealdb",
    "database",
    "browser",
    "offline",
    "sync"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.5.2",
  "dependencies": {
    "surrealdb": "^2.0.0-alpha.9",
    "@surrealdb/wasm": "^2.3.2",
    "database": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
