# Base stage with cargo-chef
FROM rust:1.83-bookworm as chef
RUN rustup default nightly
RUN cargo install cargo-chef

# --- NEU: Wichtige Build-Dependencies f체r OpenTelemetry (protoc) und SSL ---
RUN apt-get update && apt-get install -y \
    protobuf-compiler \
    cmake \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*
# --------------------------------------------------------------------------

WORKDIR /usr/src/app

# Planner stage
FROM chef as planner
COPY packages/ssp packages/ssp
COPY apps/ssp apps/ssp
WORKDIR /usr/src/app/apps/ssp
RUN cargo chef prepare --recipe-path recipe.json

# Cacher stage
FROM chef as cacher
WORKDIR /usr/src/app
COPY --from=planner /usr/src/app/apps/ssp/recipe.json apps/ssp/recipe.json
COPY packages/ssp packages/ssp
WORKDIR /usr/src/app/apps/ssp
# Cook dependencies - protoc wird hier gebraucht!
RUN cargo chef cook --release --recipe-path recipe.json

# Builder stage
FROM chef as builder
COPY packages/ssp packages/ssp
COPY apps/ssp apps/ssp
COPY --from=cacher /usr/src/app/apps/ssp/target apps/ssp/target
COPY --from=cacher /usr/local/cargo /usr/local/cargo
WORKDIR /usr/src/app/apps/ssp
# Build binary - protoc wird hier gebraucht!
RUN cargo build --release

# Runtime Stage
FROM debian:bookworm-slim

# Install necessary runtime dependencies
# --- NEU: libssl3 hinzugef체gt f체r Laufzeit-Kompatibilit채t ---
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*
# ------------------------------------------------------------

# Create directory for persistence
RUN mkdir -p /data

# Copy the binary from builder
COPY --from=builder /usr/src/app/apps/ssp/target/release/ssp-server /usr/local/bin/

# Set defaults
ENV RUST_LOG=info
ENV SPOOKY_PERSISTENCE_FILE=/data/spooky_state.json

# Expose port
EXPOSE 8667

# Command to run
CMD ["ssp-server"]