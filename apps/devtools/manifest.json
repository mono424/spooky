{
  "manifest_version": 3,
  "name": "Spooky DevTools",
  "version": "0.1.0",
  "description": "Chrome DevTools panel for debugging and inspecting Spooky state",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["page-script.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
