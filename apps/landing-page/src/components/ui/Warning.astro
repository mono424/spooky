---
const { title = 'Warning' } = Astro.props;
---

<div
  class="relative overflow-hidden rounded-lg border border-amber-500/20 bg-amber-500/5 p-4 my-6 flex items-start gap-3 backdrop-blur-sm"
>
  {/* Icon - Amber (Warning Triangle) */}
  <div class="shrink-0 text-amber-500 mt-0.5">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
      <path
        fill-rule="evenodd"
        d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003ZM12 8.25a.75.75 0 0 1 .75.75v3.75a.75.75 0 0 1-1.5 0V9a.75.75 0 0 1 .75-.75Zm0 8.25a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z"
        clip-rule="evenodd"></path>
    </svg>
  </div>

  <div class="text-amber-200/70 text-sm leading-relaxed">
    <strong class="block text-amber-500 mb-1 text-sm font-medium">{title}</strong>
    <slot />
  </div>
</div>
