---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings?: Heading[];
}

const { headings = [] } = Astro.props;
---

<div class="text-sm">
  <h4 class="font-medium text-text-main mb-4 pl-4">On this page</h4>
  <ul class="space-y-2 border-l border-border">
    {
      headings.map((h) => (
        <li>
          <a
            href={`#${h.slug}`}
            class:list={[
              'block text-text-muted hover:text-primary transition-colors line-clamp-1 border-l-2 border-transparent -ml-[1px]',
              {
                'pl-4': h.depth === 2,
                'pl-6': h.depth === 3,
                'pl-8': h.depth > 3,
              },
            ]}
            data-heading-link={h.slug}
          >
            {h.text}
          </a>
        </li>
      ))
    }
  </ul>
</div>

<script>
  function updateActiveHeading() {
    const headings = document.querySelectorAll('h2, h3, h4');
    const links = document.querySelectorAll('[data-heading-link]');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const id = entry.target.id;
            links.forEach((link) => {
              if (link.getAttribute('data-heading-link') === id) {
                link.classList.add('text-primary', 'border-primary', 'font-medium');
                link.classList.remove('text-text-muted', 'border-transparent');
              } else {
                link.classList.remove('text-primary', 'border-primary', 'font-medium');
                link.classList.add('text-text-muted', 'border-transparent');
              }
            });
          }
        });
      },
      { rootMargin: '-100px 0px -66% 0px' }
    );

    headings.forEach((h) => observer.observe(h));
  }

  // Run on load and View Transitions
  document.addEventListener('astro:page-load', updateActiveHeading);
  updateActiveHeading();
</script>
