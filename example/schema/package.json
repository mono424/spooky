{
  "name": "@example/schema",
  "version": "1.0.0",
  "description": "Database schema and types for SurrealDB",
  "scripts": {
    "build": "vite build",
    "build:ts": "syncgen --format typescript --input ./src/schema.surql --output ../app-solid/src/schema.gen.ts",
    "build:dart": "syncgen --format dart --input ./src/schema.surql --append ./src/meta_tables.surql --output ../client-dart/src/db/models.dart",
    "build:surql": "npm run build:ts && npm run build:dart && syncgen --input ./src/schema.surql --output ./.spooky/remote.gen.surql",
    "dev": "vite build --watch",
    "db:reset": "docker-compose down -v && pnpm dev"
  },
  "keywords": [
    "database",
    "schema",
    "surrealdb"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "syncgen": "workspace:*",
    "vite": "^5.0.0",
    "typescript": "^5.3.0"
  }
}
