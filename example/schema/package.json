{
  "name": "@example/schema",
  "version": "1.0.0",
  "description": "Database schema and types for SurrealDB",
  "scripts": {
    "start": "node run.js up -d",
    "stop": "node run.js down",
    "dev": "pnpm build && node run.js up",
    "dev:example": "pnpm db:reset && pnpm dev",
    "db:reset": "node run.js down -v",
    "build": "pnpm build:ts && pnpm build:dart && pnpm build:surql",
    "build:ts": "syncgen --format typescript --input ./src/schema.surql --output ../app-solid/src/schema.gen.ts",
    "build:dart": "syncgen --format dart --input ./src/schema.surql --output ../client-dart/src/db/models.dart",
    "build:surql": "pnpm build:remote:surrealism && pnpm build:remote:sidecar",
    "build:remote:surrealism": "syncgen --input ./src/schema.surql --output ./.spooky/remote-surrealism.gen.surql --mode surrealism --modules-dir ../../packages/surrealism-modules",
    "build:remote:sidecar": "syncgen --input ./src/schema.surql --output ./.spooky/remote-sidecar.gen.surql --mode sidecar --sidecar-endpoint http://spooky-sidecar:3000 --sidecar-secret mysecret --modules-dir ../../packages/surrealism-modules"
  },
  "keywords": [
    "database",
    "schema",
    "surrealdb"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "syncgen": "workspace:*"
  }
}