{
  "name": "@example/schema",
  "version": "1.0.0",
  "description": "Database schema and types for SurrealDB",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schema.surql": "./schema.surql"
  },
  "files": [
    "schema.surql",
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "build:ts": "syncgen --format typescript --input schema.surql --append meta_tables.surql --output ../app-solid/src/schema.gen.ts",
    "build:dart": "syncgen --format dart --input schema.surql --append meta_tables.surql --output ../client-dart/src/db/models.dart",
    "build:surql": "npm run build:ts && npm run build:dart && syncgen --input schema.surql --append meta_tables.surql --output .server.gen.surql",
    "dev": "vite build --watch",
    "db:reset": "docker-compose down -v && pnpm dev"
  },
  "keywords": [
    "database",
    "schema",
    "surrealdb"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "syncgen": "workspace:*",
    "vite": "^5.0.0",
    "typescript": "^5.3.0"
  }
}
