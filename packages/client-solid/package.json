{
  "name": "@spooky/client-solid",
  "version": "1.0.0",
  "type": "module",
  "description": "SurrealDB client with local and remote database support for browser applications",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "dev:example": "pnpm build:watch",
    "dev": "tsdown --watch",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "surrealdb",
    "database",
    "browser",
    "offline",
    "sync"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "@spooky/query-builder": "workspace:*",
    "@spooky/core": "workspace:*",
    "@surrealdb/wasm": "^2.6.0",
    "surrealdb": "2.0.0-alpha.17",
    "valtio": "^2.1.8"
  },
  "peerDependencies": {
    "solid-js": "^1.x.x"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "solid-js": "^1.8.7",
    "tsdown": "^0.12.4",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}